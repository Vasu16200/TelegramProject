{
    "mappings": [
        {
            "request": {
                "method": "POST",
                "url": "/signup",
                "bodyPatterns": [
                    {
                        "matchesJsonPath": "$[?(@.email)]"
                    },
                    {
                        "matchesJsonPath": "$[?(@.mobileNumber)]"
                    }
                ]
            },
            "response": {
                "status": 200,
                "jsonBody": {
                    "message": "OTP generated successfully for signup"
                },
                "headers": {
                    "Content-Type": "application/json"
                }
            }
        },
        {
            "request": {
                "method": "POST",
                "url": "/signup/validate-otp",
                "bodyPatterns": [
                    {
                        "matchesJsonPath": "$[?(@.email == 'email1@example.com')]"
                    },
                    {
                        "matchesJsonPath": "$[?(@.otp == '123456')]"
                    }
                ]
            },
            "response": {
                "status": 200,
                "jsonBody": {
                    "message": "Signup OTP verified successfully"
                },
                "headers": {
                    "Content-Type": "application/json"
                }
            }
        },
        {
            "request": {
                "method": "POST",
                "url": "/login/generate-otp",
                "bodyPatterns": [
                    {
                        "matchesJsonPath": "$[?(@.email)]"
                    }
                ]
            },
            "response": {
                "status": 200,
                "jsonBody": {
                    "message": "OTP generated successfully for login"
                },
                "headers": {
                    "Content-Type": "application/json"
                }
            }
        },
        {
            "request": {
                "method": "POST",
                "url": "/login/validate-otp",
                "bodyPatterns": [
                    {
                        "matchesJsonPath": "$[?(@.email == 'email2@example.com')]"
                    },
                    {
                        "matchesJsonPath": "$[?(@.otp == '654321')]"
                    }
                ]
            },
            "response": {
                "status": 200,
                "jsonBody": {
                    "message": "Login OTP verified successfully",
                    "redirect": "/home"
                },
                "headers": {
                    "Content-Type": "application/json"
                }
            }
        },
